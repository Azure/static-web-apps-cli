{
  "preset": "ts-jest",
  "roots": ["<rootDir>/src"],
  "setupFilesAfterEnv": ["jest-extended/all"],
  "testMatch": ["**/__tests__/**/*.+(ts)", "**/?(*.)+(spec|test).+(ts)"],
  "testEnvironment": "node",
  "transform": {
    "^.+\\.(ts)$": "ts-jest"
  },
  "verbose": true,
  "extensionsToTreatAsEsm": [".ts"],
  "globals": {
    "ts-jest": {
      "useESM": true
    }
  },
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  }
}
